<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suyash.graph.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_weight="0.5"
        android:layout_marginRight="8dp">

        <ImageView
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_graph"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/line_graph"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="36dp"
            android:textStyle="normal"
            />

    </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="0.5"
            android:layout_marginLeft="8dp">

            <ImageView
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pie_chart"
                android:background="@color/colorPrimary" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pie_chart"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="36dp"
                android:textStyle="normal"
                />

        </android.support.v7.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="0.5"
            android:layout_marginRight="8dp">

            <ImageView
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar_graph"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bar_graph"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="36dp"
                android:textStyle="normal"
                />

        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_weight="0.5"
            android:layout_marginLeft="8dp">

            <ImageView
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/curved_ascending_line"
                android:background="@color/colorPrimary" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/free_curve"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="36dp"
                android:textStyle="normal"
                />

        </android.support.v7.widget.CardView>

    </LinearLayout>



</LinearLayout>
